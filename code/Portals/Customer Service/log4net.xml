<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <!-- Valid log levels: OFF, FATAL, ALL, WARN, INFO, DEBUG, ALL -->

  <!-- log file appender -->
  <appender name="logfile" type="log4net.Appender.RollingFileAppender">
    <file value="E:\LogFiles\AmericanEagle\qa-csaerewards-bline\CSPortal_Aline.log"/>
    <appendToFile value="true"/>
    <maximumFileSize value="10MB"/>
    <maxSizeRollBackups value="10"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level [%logger] - %message%newline" />
    </layout>
  </appender>

  <!-- Custom Appender to log to Logging Service -->
  <appender name="lwLoggingLogger" type="Brierley.LoyaltyWare.LWLoggingService.Appender.LWLoggingServiceAppender,Brierley.LoyaltyWare.LWLoggingService.Appender">
      <LWLoggingServiceUri value="net.tcp://localhost:9012/LWLoggingService"/>
      <LWLoggingSource value="LWPortal"/>
      <!--<LWLoggingTraceFile value="C:\LoyaltyWare4.2\DevRoot\Logs\LWPortal-Trace.dat"/>-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level [%logger] - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <acceptOnMatch value="true" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
  </appender>
  
  <!-- Appender to be used for capturing SQL queries generated by nHibernate -->
  <appender name="nhibernateLogger" type="log4net.Appender.RollingFileAppender">
    <file value="C:\LoyaltyWare4.2\DevRoot\Logs\LWPortal-NHLogs.log"/>
    <appendToFile value="true"/>
    <maximumFileSize value="10MB"/>
    <maxSizeRollBackups value="10"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level [%logger] - %message%newline" />
    </layout>
  </appender>

  <!-- event log appender - filtered for ALL only -->
  <appender name="eventlog" type="log4net.Appender.EventLogAppender" >
    <applicationName value="B+P LoyaltyWare LoyaltyNavigator" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%thread] [%logger] - %message%newline" />
    </layout>
    <mapping>
      <level value="ERROR" />
      <eventLogEntryType value="Error" />
    </mapping>    
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <acceptOnMatch value="true" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
  </appender>

  <!-- This is the default log level for all loggers (should be INFO) -->
  <root>
    <level value="DEBUG"/>
    <appender-ref ref="logfile"/>
  </root>

  <!-- The log levels for individual loggers can be set below, which will override the default level -->
  <!-- LoyaltyWare -->

  <!--<logger name="LoyaltyWareFramework">
    <level value="ERROR"/>    
  </logger>
  
  <logger name="LoyaltyWareWebFramework">
    <level value="ERROR"/>    
  </logger>
  
  <logger name="LWPortalModules">
    <level value="ERROR"/>    
  </logger>
  
  <logger name="PortalModuleSDK">
    <level value="ERROR"/>    
  </logger>-->
  
  <!-- NHibernate: for logging SQL statements, set NHibernate.SQL to DEBUG -->
  <logger name="NHibernate">
    <level value="ERROR" />
  </logger>

  <!--<logger name="NHibernate.SQL" additivity="false">
    <level value="ERROR" />
